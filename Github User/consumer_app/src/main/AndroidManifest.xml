<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.path_studio.consumer_app">

    <uses-permission android:name="com.path_studio.githubuser.READ_DATABASE" />
    <uses-permission android:name="com.path_studio.githubuser.WRITE_DATABASE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubUser">
        <activity android:name="com.path_studio.consumer_app.views.activities.MainActivity"/>
        <activity
            android:name="com.path_studio.consumer_app.views.activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.path_studio.consumer_app.views.activities.DetailUserActivity" />
        <activity android:name="com.path_studio.consumer_app.views.activities.DetailFollowActivity" />
    </application>

</manifest>
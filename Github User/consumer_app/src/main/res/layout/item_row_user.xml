<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:paddingVertical="20dp"
    android:focusable="true">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_row_avatar"
        style="@style/ItemRowAvatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_row_type"
        style="@style/ItemRowName"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/item_row_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_row_username"
        style="@style/ItemRowUsername"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/item_row_avatar"
        app:layout_constraintTop_toBottomOf="@+id/item_row_type" />

</androidx.constraintlayout.widget.ConstraintLayout>